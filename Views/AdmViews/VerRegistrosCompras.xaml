<UserControl x:Class="ProyectoBBDD.Views.AdmViews.VerRegistrosCompras"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoBBDD.Views.AdmViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <DataGrid IsReadOnly="True" ItemsSource="{Binding ListaRegistros}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Usuario" Binding="{Binding Usuario}" />
                    <DataGridTextColumn Width="*" Header="Producto" Binding="{Binding Producto}" />
                    <DataGridTextColumn Width="*" Header="Cantidad" Binding="{Binding Cantidad}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

    </Grid>
</UserControl>
